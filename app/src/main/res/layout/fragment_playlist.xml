<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlistrel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Playlist"
    android:background="@drawable/gradient">

    <Button
        android:id="@+id/menubttn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_black_24dp"
        android:backgroundTint="@color/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="10px"
        android:background="@color/seperatorlineDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menubttn" />

    <Button
        android:id="@+id/addplaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_playlist_add_24dp"
        android:backgroundTint="@color/text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@color/textsecondary"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/line" />


</android.support.constraint.ConstraintLayout>