<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlaylistSelector"
    android:background="@drawable/gradient">

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="5px"
        android:background="@color/seperatorlineDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selected" />

    <ListView
        android:id="@+id/selection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/toolbar"
        android:divider="@drawable/customdivider"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <Button
        android:id="@+id/selected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_done_24dp"
        android:backgroundTint="@color/textsecondary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>